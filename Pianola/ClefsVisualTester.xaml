<UserControl x:Class="Pianola.ClefsVisualTester"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Pianola"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!-- ramka pokazująca granice klucza na tle pięciolinii -->
        <Style TargetType="{x:Type ListViewItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border Margin="0 60 0 0" BorderBrush="BlueViolet" BorderThickness="1">
                            <Grid>
                                <ContentPresenter VerticalAlignment="Top" />
                                <local:StaffLines VerticalAlignment="Top" Width="50"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- klucze pokazywane w poziomie -->
        <ItemsPanelTemplate x:Key="ListViewItemsPanel1">
            <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
    </UserControl.Resources>

    <ListView ItemsPanel="{DynamicResource ListViewItemsPanel1}">
        <local:TrebleClef />
        <local:BassClef />
    </ListView>

    <!-- <Grid> -->
