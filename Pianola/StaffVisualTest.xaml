<UserControl x:Class="Pianola.StaffVisualTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Pianola"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="local:Staff">
            <Setter Property="Margin" Value="0 17 0 17" />
        </Style>
        <Style TargetType="local:Clef">
            <Setter Property="IsGridlinesVisible" Value="True" />
            <Setter Property="IsStaffLinesVisible" Value="True" />
        </Style>
        <Style TargetType="local:Scale">
            <Setter Property="IsGridlinesVisible" Value="True" />
            <Setter Property="IsStaffLinesVisible" Value="True" />
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
        <local:Staff ClefType="Treble" ScaleType="Cis" />
        <local:Staff ClefType="Bass" ScaleType="Ces"/>
    </StackPanel>
</UserControl>