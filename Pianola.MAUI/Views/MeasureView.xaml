<?xml version="1.0" encoding="utf-8"?>

<GraphicsView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              xmlns:drawables="using:Pianola.MAUI.Drawables"
              x:Class="Pianola.MAUI.Views.MeasureView"
              x:Name="This"
              EndInteraction="OnEndInteraction"
              HeightRequest="{x:Static drawables:SystemDrawable.Height}"
              WidthRequest="1">
    <GraphicsView.Drawable>
        <drawables:MeasureDrawable View="{x:Reference This}"/>
    </GraphicsView.Drawable>
</GraphicsView>