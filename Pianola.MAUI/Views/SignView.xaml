<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Pianola.MAUI.Views"
             x:Class="Pianola.MAUI.Views.SignView"
             x:Name="This"
             HorizontalOptions="Start" VerticalOptions="Start"
             BackgroundColor="LightGray"
             BindingContext="{x:Reference This}">
    <GraphicsView x:Name="GraphicsView"
                  WidthRequest="300"
                  HeightRequest="300"
                  MoveHoverInteraction="OnMoveHoverInteraction">
        <GraphicsView.Drawable>
            <views:SignViewDrawable GraphicsView="{x:Reference GraphicsView}" />
        </GraphicsView.Drawable>
    </GraphicsView>
</ContentView>