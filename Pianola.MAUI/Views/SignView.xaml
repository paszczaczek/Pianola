<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Pianola.MAUI.Views"
             x:Class="Pianola.MAUI.Views.SignView"
             x:DataType="views:SignView"
             x:Name="ContentView">
    <HorizontalStackLayout>
        <GraphicsView x:Name="GraphicsView"
                      HorizontalOptions="Start" VerticalOptions="Start"
                      StartInteraction="OnStartInteraction"
                      WidthRequest="1" HeightRequest="1">
            <GraphicsView.Drawable>
                <views:SignDrawable GraphicsView="{x:Reference GraphicsView}"
                                    BindingContext="{x:Reference ContentView}"
                                    Sign="{Binding Sign}" />
            </GraphicsView.Drawable>
        </GraphicsView>
    </HorizontalStackLayout>
</ContentView>