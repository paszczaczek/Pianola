<?xml version="1.0" encoding="utf-8"?>

<!-- https://askxammy.com/getting-started-with-flexlayout-properties-behavior/ -->
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Pianola.MAUI.Views"
             xmlns:drawables="clr-namespace:Pianola.MAUI.Drawables"
             x:Class="Pianola.MAUI.Views.ScoreView">
    <Grid ColumnDefinitions="Auto, *">
        <VerticalStackLayout Grid.Column="0" x:Name="Clefs" />
        <Grid Grid.Column="1">
            <GraphicsView EndInteraction="GraphicsView_OnEndInteraction">
                <GraphicsView.Drawable>
                    <views:ScoreDrawable />
                </GraphicsView.Drawable>
            </GraphicsView>
            <FlexLayout x:Name="FlexLayout"
                        AlignContent="Start" JustifyContent="Start" Wrap="Wrap"
                        SizeChanged="FlexLayout_OnSizeChanged">
            </FlexLayout>
        </Grid>
    </Grid>
</ContentView>