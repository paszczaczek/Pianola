<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pianola.MAUI.Views.ScoreView">
    <Grid>
        <VerticalStackLayout x:Name="Staffs"
                             HorizontalOptions="Fill" />
        <Grid ColumnDefinitions="Auto, *">
            <VerticalStackLayout x:Name="SystemsBeginnings" Grid.Column="0" WidthRequest="100" />
            <FlexLayout x:Name="Measures"
                        Grid.Column="1"
                        AlignContent="Start" JustifyContent="Start" Wrap="Wrap"
                        SizeChanged="Measures_OnSizeChanged">
            </FlexLayout>
        </Grid>
    </Grid>
</ContentView>